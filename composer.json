{
    "name": "springy-framework/springy",
    "type": "project",
    "description": "Springy Framework",
    "keywords": [
        "framework",
        "springy"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Val",
            "homepage": "https://fval.com.br",
            "email": "fernando@fval.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-mbstring": "*",

        "springy-framework/core": "5.0.0-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",

        "smarty/smarty": "~3.1",
        "sendgrid/sendgrid": "~7"
    },
    "suggest": {
        "smarty/smarty": "Use Smarty v3.x template engine if you like it",
        "twig/twig": "Use Twig v2.x template engine if you prefer it",
        "sendgrid/sendgrid": "We recommend SendGrid SDK v7.x to send transactional email messages"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "files": [],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}